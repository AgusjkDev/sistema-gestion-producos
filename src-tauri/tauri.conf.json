{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm run build",
        "beforeDevCommand": "pnpm run dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "sistema-gestion-productos",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false
        },
        "bundle": {
            "active": true,
            "category": "Business",
            "copyright": "© Agustín Arnoldi. Todos los derechos reservados.",
            "publisher": "Agustín Arnoldi",
            "identifier": "com.sgp.agusjkdev",
            "shortDescription": "Sistema de Gestión de Productos.",
            "longDescription": "Sistema de Gestión de Productos.",
            "targets": "all",
            "windows": {
                "digestAlgorithm": "sha256"
            },
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "maximized": true,
                "resizable": true,
                "title": "Sistema de Gestión de Productos"
            }
        ]
    }
}
